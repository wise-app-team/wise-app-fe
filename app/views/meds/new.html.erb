<h1>Add a medication to your list</h1>
<%binding.pry%>
<p>Name of Medication:<%= @medication.synonym %></p>

<p><%= form_with url: "/users/#{user.id}/meds", method: :post, local: :true do |form| %></p>

  <p><%= form.label :dose1 %></p>
  <p><%= form.time_field :dose1 %></p>

  <p><%= form.label :dose2 %></p>
  <p><%= form.time_field :dose2 %></p>

  <p><%= form.label :dose3 %></p>
  <p><%= form.time_field :dose3 %></p>

  <p><%= f.label :prn, "As Needed" %></p>
  <p><%= f.radio_button :prn, true %></p>
  <p><%= f.radio_button :prn, false %></p>
  

  <p><%= form.label :notes %></p>
  <p><%= form.text_field :notes %></p>

  <p><%= form.submit "Submit" %></p>
<% end %>