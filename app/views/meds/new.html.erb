<div class="px-40">
  <h1 class="text-3xl font-bold mb-4">Add a medication to your list</h1>
  <h2 class="text-xl mb-2">Name of Medication: <%= @medication_name %></h2>

  <%= form_with url: "/users/#{@user_id}/meds", method: :post, local: :true do |form| %>
    <%= form.hidden_field :rxcui, value: @rxcui %>

    <div class="mb-4">
      <%= form.label :dose1, class: "block text-gray-700 font-bold mb-2" %>
      <%= form.time_field :dose1, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4">
      <%= form.label :dose2, class: "block text-gray-700 font-bold mb-2" %>
      <%= form.time_field :dose2, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4">
      <%= form.label :dose3, class: "block text-gray-700 font-bold mb-2" %>
      <%= form.time_field :dose3, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4">
      <%= form.label :prn, "As Needed?", class: "block text-gray-700 font-bold mb-2" %>
      <label class="inline-flex items-center">
        <%= form.radio_button :prn, true, class: "form-radio h-5 w-5 text-gray-600" %>
        <span class="ml-2 text-gray-700">True</span>
      </label>
      <label class="inline-flex items-center ml-6">
        <%= form.radio_button :prn, false, class: "form-radio h-5 w-5 text-gray-600" %>
        <span class="ml-2 text-gray-700">False</span>
      </label>
    </div>

    <div class="mb-4">
      <%= form.label :notes, class: "block text-gray-700 font-bold mb-2" %>
      <%= form.text_field :notes, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="text-center">
      <%= form.submit "Submit", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>
</div>